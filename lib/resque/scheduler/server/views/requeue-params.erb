<h1><%= @job_name %></h1>

<p class="intro">
   This job requires parameters:
</p>

<form style="float:left" action="<%= u "/schedule/requeue_with_params" %>" method="post">
  <table>
  <% @parameters.each do |key, value| %>
    <%
      value ||= {}
      description = value['description'] || value[:description]
      default = value['default'] || value[:default]
    %>
    <tr>
      <td>
        <%= key %>
        <% if description %>
          <span style="border-bottom:1px dotted;" title="<%= description %>">(?)</span>
        <% end %>:
      </td>
      <td><input type="text" name="<%= key %>" value="<%= default %>"></td>
  <% end %>
  </table>
  <input type="hidden" name="job_name" value="<%= @job_name %>">
  <input type="submit" value="Queue Now">
</form>
